<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DecibelX - Sign In</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: #f6f5f7;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: 'Montserrat', sans-serif;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.15), 0 10px 10px rgba(0, 0, 0, 0.12);
            position: relative;
            overflow: hidden;
            width: 800px;
            max-width: 100%;
            min-height: 650px;
        }

        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            width: 50%;
        }

        .sign-in-container {
            left: 0;
            z-index: 2;
        }

        .overlay-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            z-index: 100;
        }

        .overlay {
            background: #3498db;
            background: linear-gradient(to right, rgba(52, 152, 219, 0.7), rgba(41, 128, 185, 0.7));
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 0 0;
            color: #FFFFFF;
            position: relative;
            height: 100%;
            width: 100%;
        }

        .overlay-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .overlay-panel {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 100%;
            background-image: url(img/Signup_image.jpg);
        }

        .overlay-panel img {
            width: 395px;
            height: auto;
        }

        h1 {
            font-weight: bold;
            margin: 0;
            margin-bottom: 15px;
        }

        p {
            font-size: 14px;
            line-height: 20px;
            letter-spacing: 0.5px;
            margin: 20px 0 30px;
        }

        button {
            border-radius: 20px;
            border: 1px solid #3498db;
            background-color: #3498db;
            color: #FFFFFF;
            font-size: 12px;
            font-weight: bold;
            padding: 12px 45px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 80ms ease-in, background-color 0.3s;
            cursor: pointer;
        }

        button:active {
            transform: scale(0.95);
        }

        button:focus {
            outline: none;
        }

        button.ghost {
            background-color: transparent;
            border-color: #FFFFFF;
        }

        button:hover {
            background-color: #2980b9;
        }

        button.ghost:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        form {
            background-color: #FFFFFF;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px 50px;
            height: 100%;
            text-align: center;
            overflow-y: hidden;
        }

        input {
            background-color: #eee;
            border: none;
            border-radius: 4px;
            padding: 12px 15px;
            margin: 4px 0 0 0;
            width: 100%;
        }

        .form-group {
            width: 100%;
            text-align: left;
            margin-bottom: 6px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 2px;
            font-size: 13px;
            color: #333;
        }

        .error-message {
            color: #e74c3c;
            font-size: 11px;
            margin-top: 2px;
            margin-bottom: 2px;
            text-align: left;
            display: none;
        }

        input.error {
            border: 1px solid #e74c3c;
        }

        .social-container {
            margin: 15px 0;
            display: flex;
            width: 100%;
            justify-content: center;
        }

        .social-container .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .social-container .social-btn:hover {
            background-color: #dbdada;
        }

        .social-container .social-btn img {
            height: 24px;
            margin-right: 10px;
        }

        .social-container .social-btn span {
            font-size: 14px;
            color: #333;
        }

        .social-container a {
            text-decoration: none;

        }

        .divider {
            width: 100%;
            text-align: center;
            margin: 10px 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #eee;
            z-index: 1;
        }

        .divider span {
            background-color: white;
            padding: 0 15px;
            position: relative;
            z-index: 2;
            color: #777;
            font-size: 12px;
        }

        .checkbox-container {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin: 10px 0;
            font-size: 14px;
        }

        .remember-me {
            display: flex;
            align-items: center;
        }

        .remember-me input {
            width: auto;
            margin-right: 5px;
        }

        .remember-me label {
            margin: 0;
            color: #333;
        }

        .forgot-password {
            color: #3498db;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password:hover {
            text-decoration: underline;
        }

        .signup-link {
            margin-top: 10px;
            color: #777;
            font-size: 14px;
        }

        .signup-link a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        #signin-form button[type="submit"] {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .text-danger-custom {
            color: red;
            background: none;
            border: none;
            padding: 0;
            margin: 0;
        }

        .mobile-logo {
            display: none;
            /* Hidden by default */
            text-align: center;
            margin-bottom: 20px;
        }

        .mobile-logo img {
            width: 250px;
            /* Adjust the size as needed */
            height: auto;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .container {
                width: 90%;
                /* Reduce container width for smaller screens */
                min-height: auto;
                /* Allow container to adjust height */
                flex-direction: column;
                /* Stack elements vertically */
            }

            .form-container,
            .overlay-container {
                width: 100%;
                /* Full width for form and overlay */
                height: auto;
                /* Adjust height automatically */
                position: static;
                /* Remove absolute positioning */
            }

            .overlay-container {
                display: none;
                /* Hide overlay on small screens */
            }

            .form-container.sign-in-container {
                padding: 20px;
                /* Add padding for better spacing */
            }

            .overlay-panel {
                padding: 20px;
                /* Adjust padding for smaller screens */
            }

            .overlay-panel img {
                width: 200px;
                /* Reduce image size for smaller screens */
            }

            h1 {
                font-size: 24px;
                /* Reduce heading size */
            }

            p {
                font-size: 12px;
                /* Reduce paragraph text size */
            }

            button {
                padding: 10px 30px;
                /* Adjust button padding */
                font-size: 10px;
                /* Reduce button text size */
            }

            input {
                padding: 10px;
                /* Adjust input padding */
            }

            .form-group label {
                font-size: 12px;
                /* Reduce label size */
            }

            .error-message {
                font-size: 10px;
                /* Reduce error message size */
            }

            .signup-link {
                font-size: 12px;
                /* Reduce signup link size */
            }

            .social-container .social-btn {
                padding: 6px;
                /* Adjust social button padding */
            }

            .social-container .social-btn img {
                height: 20px;
                /* Reduce social icon size */
            }

            .social-container .social-btn span {
                font-size: 12px;
                /* Reduce social button text size */
            }

            .divider span {
                font-size: 10px;
                /* Reduce divider text size */
            }

            .checkbox-container {
                font-size: 12px;
                /* Reduce checkbox and link text size */
            }

            .forgot-password {
                font-size: 12px;
                /* Reduce forgot password link size */
            }

            .mobile-logo {
                display: block;
            }
        }

        @media (max-width: 480px) {
            .container {
                width: 100%;
                /* Full width for very small screens */
                border-radius: 0;
                /* Remove border radius */
            }

            .form-container.sign-in-container {
                padding: 10px;
                /* Reduce padding further */
            }

            h1 {
                font-size: 20px;
                /* Further reduce heading size */
            }

            p {
                font-size: 10px;
                /* Further reduce paragraph text size */
            }

            button {
                padding: 8px 20px;
                /* Further adjust button padding */
                font-size: 9px;
                /* Further reduce button text size */
            }

            input {
                padding: 8px;
                /* Further adjust input padding */
            }

            .form-group label {
                font-size: 11px;
                /* Further reduce label size */
            }

            .error-message {
                font-size: 9px;
                /* Further reduce error message size */
            }

            .signup-link {
                font-size: 11px;
                /* Further reduce signup link size */
            }

            .social-container .social-btn {
                padding: 4px;
                /* Further adjust social button padding */
            }

            .social-container .social-btn img {
                height: 18px;
                /* Further reduce social icon size */
            }

            .social-container .social-btn span {
                font-size: 10px;
                /* Further reduce social button text size */
            }

            .divider span {
                font-size: 9px;
                /* Further reduce divider text size */
            }

            .checkbox-container {
                font-size: 11px;
                /* Further reduce checkbox and link text size */
            }

            .forgot-password {
                font-size: 11px;
                /* Further reduce forgot password link size */
            }

            .mobile-logo {
                display: block;
            }
        }
    </style>
</head>

<body>
    <div class="container" id="container">
        <!-- Login Form Section -->
        <div class="form-container sign-in-container">
            <div class="mobile-logo">
                <img src="img/footer-logo.png" alt="DecibelX">
            </div>
            <form id="signin-form" method="post" action="/login">
                <h1>Log in</h1>

                <!-- Social Login Button -->
                <div class="social-container">
                    <a href="/auth/google" class="social-btn">
                        <img src="https://i.ibb.co/smTXFvv/google.png" alt="google">
                        <span>Log in with Google</span>
                    </a>
                </div>

                <!-- Divider -->
                <div class="divider">
                    <span>or</span>
                </div>

                <!-- Error Message (if any) -->
                <% if (typeof message !=='undefined' && message) { %>
                    <div class="text-danger-custom">
                        <%= message %>
                    </div>
                    <% } %>

                        <!-- Email Field -->
                        <div class="form-group">
                            <label for="signin-email">Email</label>
                            <input type="email" id="signin-email" placeholder="Enter your email" name="email" />
                            <p class="error-message" id="signin-email-error"></p>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label for="signin-password">Password</label>
                            <input type="password" id="signin-password" placeholder="Enter your password"
                                name="password" />
                            <p class="error-message" id="signin-password-error"></p>
                        </div>

                        <!-- Forgot Password Link -->
                        <div class="checkbox-container">
                            <a href="/forgetPassword" class="forgot-password">Forgot password?</a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit">Log In</button>

                        <!-- Sign Up Link -->
                        <p class="signup-link">Don't have an account? <a href="/signup">Sign Up</a></p>
            </form>
        </div>

        <!-- Overlay Section (Hidden on Small Screens) -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <img src="img/footer-logo.png" alt="DecibelX">
                </div>
            </div>
        </div>
    </div>

    <script>
        // Form validation utilities
        function showError(input, message) {
            const formGroup = input.parentElement;
            const errorElement = formGroup.querySelector('.error-message');

            input.classList.add('error');
            errorElement.textContent = message;
            errorElement.style.display = 'block';

            return false;
        }

        function clearError(input) {
            const formGroup = input.parentElement;
            const errorElement = formGroup.querySelector('.error-message');

            input.classList.remove('error');
            errorElement.textContent = '';
            errorElement.style.display = 'none';
        }

        function validateEmail(email) {
            const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        }

        // Login form validation
        const signinForm = document.getElementById('signin-form');

        // Add input event listeners to clear errors when user types
        document.getElementById('signin-email').addEventListener('input', function () {
            clearError(this);
        });

        document.getElementById('signin-password').addEventListener('input', function () {
            clearError(this);
        });

        signinForm.addEventListener('submit', function (e) {
            e.preventDefault();

            let isValid = true;

            // Validate email
            const email = document.getElementById('signin-email');
            if (email.value.trim() === '') {
                isValid = showError(email, 'Email is required');
            } else if (!validateEmail(email.value.trim())) {
                isValid = showError(email, 'Please enter a valid email');
            }

            // Validate password
            const password = document.getElementById('signin-password');
            if (password.value === '') {
                isValid = showError(password, 'Password is required');
            } else if (password.value.length < 8) {
                isValid = showError(password, 'Password must be at least 8 characters');
            }

            if (isValid) {
                // Form is valid, you would typically submit to your backend here
                signinForm.submit(); // Uncomment this when ready to submit to your backend
            }
        });
    </script>
</body>

</html>